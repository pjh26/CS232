#include <iostream>
#include <pthread.h>
#include <sys/types.h>
#include <unistd.h>
#include <string>

using namespace std;

int main(int argc, char* argv[]) {
	string str;
	bool Process = false;
	bool Thread  = false;
	int num;
	string testStr = "1900";

	for (int i = 1; i < (argc - 1); i++) {
		str = argv[i];
		if (str == "-p") {
			Process = true;
		} else if (str == "-process") {
			Process = true;
		} else if (str == "-t") {
			Thread = true;
		} else if (str == "-thread") {
			Thread = true;
		} else if (str.substr(0, 2) == "-r") {
			if (str.length() > 2) {
				int urmum = atoi(testStr.c_str());
			}

		} else {
			cout << "Please pick a process or thread to time!!" << endl;
			return 0;
		}
	}



}
